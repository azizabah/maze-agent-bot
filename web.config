<configuration>
    <system.webServer>
        <handlers>
            <add name="iisnode" path="src/server.js" web="*" modules="iisnode" />
        </handlers>

        <rewrite>
            <rules>
                <rule name="DynamicContent">
                    <conditions>
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
                    </conditions>
                    <action type="Rewrite" url="src/server.js" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>